<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>


<div class="container">
  <table class="table table-dark">
    <thead class="thead-dark">
      <tr class="row">
        <th class="col">Item_Picture</th>
        <th class="col">Item_Name</th>
        <th class="col">Item_Price</th>
        <th class="col">Item_Stock</th>

        <th class="col">Buy</th>
      </tr>
    </thead>
  <% @items.each do |item| %>
    <%if item.stock > 0%>
      <tr class="row">

        <th class="col">
          <%if item.picture.attached?%>
            <%= image_tag item.picture.variant(:thumb) %>
          <% end %>

        </th>

        <th class="col"><%= "#{item.name}" %></th>
        <th class="col"><%= "#{item.price}" %></th>
        <th class="col"><%= "#{item.stock}" %></th>
        <%if session[:authen]%>
        <th class="col"><%= button_to "Buy this item", "/main/buy/#{item.id}", :method => :get,class: "btn btn-info"%></th>
        <%else%>
        <th class="col">Please Login To buy</th>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>
