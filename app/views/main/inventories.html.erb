<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>


<div class="container">
  <table class="table table-dark">
    <thead class="thead-dark">
      <tr class="row">
        <th class="col">Item_Name</th>
        <th class="col">Item_Price</th>
        <th class="col">Seller</th>
        <th class="col">TimeStamp</th>
      </tr>
    </thead>
  <% @inventories.each do |item| %>
      <tr class="row">
        <th class="col"><%= Item.find(item.item_id).name %></th>
        <th class="col"><%= "#{item.price}" %></th>
        <th class="col"><%= User.find(Item.find(item.item_id).user_id).name %></th>
        <th class="col"><%= "#{item.timestamp}"%></th>
      </tr>
  <% end %>
  </table>
</div>
