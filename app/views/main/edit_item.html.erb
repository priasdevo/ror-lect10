<%= form_with url: "/main/relay2/#{@item.id}",method: :post do |form| %>
  <% if @item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this @item from being saved:</h2>

      <ul>
        <% @item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :"item[user_id]",value: @item.user_id%>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name ,value: @item.name,name: "item[name]"%>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :"item[price]" ,value: @item.price%>
  </div>

  <div>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :"item[stock]" ,value: @item.stock%>
  </div>

  <div>
    <%= form.label :picture, style: "display: block" %>
    <%= form.file_field :"item[picture]",value: @item.picture%>
  </div>

  <%if @item.picture.attached?%>
    <%= image_tag @item.picture.variant(:thumb) %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<br>
<div>
  <%= link_to "Show this item", @item %> |
  <%= link_to "Back to items", items_path %>
</div>